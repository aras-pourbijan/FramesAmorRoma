<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amor Frames | Hire an amazing local photographer </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;0,900;1,100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body class="pt-0">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid justify-content-center">
            <a class="navbar-brand d-flex align-self-center " >
                <img class="img-fluid" style="max-width:200px"   src="~/Content/img/template/amor-frames-low-resolution-logo-white-on-transparent-background.png" />
            </a>
            <button class="navbar-toggler collapsed float-end" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link active text-decoration-none" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Portfolio Gallary", "PortfolioGallary", "portfolios", null, new { @class = "nav-link active text-decoration-none" })
                       
                      
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Managment", "Managment", "users", null, new { @class = "nav-link active text-decoration-none" })
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Managment", "Managment", "users", null, new { @class = "nav-link disabled text-decoration-none d-none" })
                        </li>
                    }
                </ul>
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex  align-items-center">
                            <img src="@User." alt="" width="32" height="32" class="rounded-circle me-2">
                            <div class="text-white text-uppercase">@User.Identity.Name</div>
                            <div>
                                <i>@Html.ActionLink("  Logout", "logout", "users", null, new { @class = "bi bi-box-arrow-in-left text-decoration-none text-light mx-5 btn btn-sm btn-outline-danger me-5" })</i>
                            </div>
                        </div>
                    }
                    else
                    {

                        <div>
                            <i>@Html.ActionLink("  LOGIN", "login", "users", null, new { @class = "bi bi-box-arrow-in-right text-decoration-none text-white btn btn-sm btn-outline-success me-5" })</i>
                        </div>

                    }
                </div>

            </div>

        </div>
    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")


    @RenderSection("scripts", required: false)
</body>
</html>
