@model FramesAmorRoma.Models.portfolio

@{
    ViewBag.Title = "Details";
}


<div class="row mt-2 p-0 mb-0 ">
    <img src="~/Content/img/portfolio/@Model.coverIMG" style="width:100vw;height:40vh; object-fit:cover; object-position:center" alt="profile Picture" class="p-0 m-0 rounded-top ">


</div>

<div class="row mt-0 d-flex justify-content-between shadow-lg rounded rounded-2 pt-0 mt-0">
    <div class="col-12 col-md-3 text-center">
        <img src="~/Content/img/profiles/@Model.User.imgURL" class="img-fluid rounded-circle p-5" alt="profile Picture">


        <h4>The @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName) portfolios</h4>
        <hr />
        <p>@Html.DisplayFor(model => model.User.aboutME)</p>
        <div class="d-flex flex-column align-content-center ">
            <div class="btn btn-success my-1 me-auto ms-auto w-75">
                <a class="text-white text-decoration-none " href="tel:@Model.User.tel">@Model.User.tel</a>
            </div>

            <div class="d-flex justify-content-evenly">

                <a class="fw-bold text-decoration-none text-dark" style="font-size:2rem" href="@Model.User.Website"><i class="bi bi-camera" data-toggle="tooltip" data-placement="top" title="Personal website"></i></a>
                <a class="fw-bold text-decoration-none text-dark" style="font-size:2rem" href="@Model.User.instagram"><i class="bi bi-instagram" data-toggle="tooltip" data-placement="top" title="Instagram Page"></i></a>
                <a class="fw-bold text-decoration-none text-dark" style="font-size:2rem" href="mailto:@Model.User.email"><i class="bi bi-envelope-at" data-toggle="tooltip" data-placement="top" title="email"></i></a>

            </div>

            <div class="btn btn-warning me-auto ms-auto w-75 mt-5 border border-1">
                @Html.ActionLink("Book Your Photoshoot Now!", "CreateByID", "bookings", new { id = Model.IDuser, @class = "nav-link active text-decoration-none" },null)
            </div>
        </div>

    </div>
    <div class="col-12 col-md-9 shadow-lg rounded rounded-2">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
            <div class="col m-0 p-0">
                <img class="img-hover" src="~/Content/img/portfolio/@Model.img1"  style="width:100%;height:100%; object-fit:cover; object-position:center" alt="profile Picture">
            </div>
            <div class="col m-0 p-0">
                <img class="img-hover" src="~/Content/img/portfolio/@Model.img2" style="width:100%;height:100%; object-fit:cover; object-position:center" alt="profile Picture">

            </div>
            <div class="col m-0 p-0">
                <img class="img-hover" src="~/Content/img/portfolio/@Model.img3" style="width:100%;height:100%; object-fit:cover; object-position:center" alt="profile Picture">

            </div>
            <div class="col m-0 p-0">
                <img class="img-hover" src="~/Content/img/portfolio/@Model.img4" style="width:100%;height:100%; object-fit:cover; object-position:center" alt="profile Picture">
            </div>
            <div class="col m-0 p-0">
                <img class="img-hover" src="~/Content/img/portfolio/@Model.img5" style="width: 100%; height: 100%; object-fit: cover; object-position: center" alt="profile Picture">
            </div>
            <div class="col m-0 p-0">
                <img class="img-hover" src="~/Content/img/portfolio/@Model.img6" style="width:100%;height:100%; object-fit:cover; object-position:center" alt="profile Picture">
            </div>
            <div class="col m-0 p-0">
                <img class="img-hover" src="~/Content/img/portfolio/@Model.img7" style="width:100%;height:100%; object-fit:cover; object-position:center" alt="profile Picture">
            </div>
