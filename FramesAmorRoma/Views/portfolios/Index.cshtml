@model IEnumerable<FramesAmorRoma.Models.portfolio>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table table-hover bg-light">
    <tr>
        <th>
           Portfolio ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            Photographer Name

        </th>

        <th class="d-flex justify-content-center">
            <button class="btn btn-outline-warning link-dark text-decoration-none">@Html.ActionLink("Add a new Portfolio", "Create", null, new { @class = "link-dark text-decoration-none" })</button>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDportfolio)
        </td>
        <td class="d-flex align-content-center" >
            <img src="~/Content/img/portfolio/@item.coverIMG" style="width:60px;height:60px; object-fit:cover; object-position:center" class=" ms-2 rounded-circle me-3" alt="profile Picture">
            @Html.DisplayFor(modelItem => item.User.UserName)


        </td>
        <td class="text-uppercase">
            @Html.DisplayFor(modelItem => item.User.FirstName)
            @Html.DisplayFor(modelItem => item.User.LastName)
        </td>
        <td>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-warning">@Html.ActionLink("Edit", "Edit", new { id = item.IDportfolio }, new { @class = "bi bi-pencil link-dark text-decoration-none" })</button>
                <button type="button" class="btn btn-warning">@Html.ActionLink("Details", "Details", new { id = item.IDportfolio }, new { @class = "bi bi-info-square link-dark text-decoration-none" })</button>
                <button type="button" class="btn btn-warning">@Html.ActionLink("Delete", "Delete", new { id = item.IDportfolio }, new { @class = "bi bi-trash3 link-dark text-decoration-none" })</button>
            </div>

        </td>
    </tr>
}

</table>
