@model IEnumerable<FramesAmorRoma.Models.portfolio>

@{
    ViewBag.Title = "PortfolioGallary";
}

<h2 class="text-center m-5">Our Photographer's Portfolio Gallary</h2>





<div class="row justify-content-center">

    @foreach (var item in Model)
    {
        <div class="card col-12 col-md-6 col-lg-3 m-2">
            <div class="col-12 m-0 p-0">
                <img src="~/Content/img/portfolio/@item.coverIMG" class="img-fluid rounded-bottom cardGallary " style="position:center;height:45vh; width:100%; object-fit:cover" alt="cover">

            </div>

            <h3 class="card-title mt-2 mb-0 text-center justify-content-center">
                <img src="~/Content/img/profiles/@item.User.imgURL" class="img-fluid rounded-circle profilePhotographer" alt="...">
            </h3>
            <div>
                <h4 class="card-title mt-2 mb-0 text-center ">
                    @Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)
                </h4>
                <h6 class="text-secondary m-0 text-center">
                    @Html.DisplayFor(modelItem => item.User.experience) Years Of Experience
                </h6>
                <div class="btnToGallary text-center me-auto ms-auto">
                    @Html.ActionLink("Enter To Gallary", "Details", new { id = item.IDportfolio }, new { @class = "link-dark btn btn-outline-light mt-2 my-0 fw-bolder border-0 rounded-start text-decoration-none rounded-0 " })
                </div>
            </div>
            
        </div>
















